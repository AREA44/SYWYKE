---
import "@/styles/global.css";
import "cal-sans";

export type Props = {
  title?: string;
  description?: string;
};

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const { title, description } = Astro.props;
---

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" type="image/png" href={`${canonicalURL}favicon.ico`} />
  <link
    rel="icon"
    type="image/png"
    sizes="192x192"
    href={`${canonicalURL}android-chrome-192x192.png`}
  />
  <link
    rel="icon"
    type="image/png"
    sizes="512x512"
    href={`${canonicalURL}android-chrome-512x512.png`}
  />
  <link
    rel="apple-touch-icon"
    sizes="180x180"
    href={`${canonicalURL}apple-touch-icon.png`}
  />
  <link
    rel="icon"
    type="image/png"
    sizes="32x32"
    href={`${canonicalURL}favicon-32x32.png`}
  />
  <link
    rel="icon"
    type="image/png"
    sizes="16x16"
    href={`${canonicalURL}favicon-16x16.png`}
  />
  <link rel="manifest" href={`${canonicalURL}site.webmanifest`} />
  <meta name="theme-color" content="#ffffff" />
  <link
    rel="sitemap"
    type="application/xml"
    href={`${canonicalURL}sitemap-index.xml`}
  />
  <meta name="generator" content={Astro.generator} />
  <title>{title}</title>
  <meta name="title" content={title} />
  <meta name="description" content={description} />
  <meta property="og:type" content="website" />
  <meta property="og:url" content={Astro.url} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL("og.svg", Astro.site)} />
  <meta name="twitter:url" content={Astro.url} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL("og.svg", Astro.site)} />
</head>
