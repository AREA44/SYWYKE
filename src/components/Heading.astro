---
export interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  className?: string;
}

const { level = 2, className = "" } = Astro.props;
const Tag = `h${level}` as keyof HTMLElementTagNameMap;
---

<Tag
  class={`scroll-m-20 border-b pb-2 text-3xl font-semibold tracking-tight first:mt-0 ${className}`}
>
  <slot />
</Tag>
