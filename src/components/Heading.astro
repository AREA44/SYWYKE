---
export interface Props {
  level?: 1 | 2 | 3 | 4 | 5 | 6;
  class?: string;
}

const { level = 2, class: customClass = "" } = Astro.props;

// Define base styles for consistent heading appearance
const baseClasses = "scroll-m-20 font-semibold tracking-tight";
const levelClasses = {
  1: "text-4xl font-extrabold",
  2: "text-3xl pb-2 border-b",
  3: "text-2xl",
  4: "text-xl",
  5: "text-lg",
  6: "text-base",
};
const HeadingTag = `h${level}` as keyof HTMLElementTagNameMap;
---

<HeadingTag class={`${baseClasses} ${levelClasses[level]} ${customClass}`}>
  <slot />
</HeadingTag>
