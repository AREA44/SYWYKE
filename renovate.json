{
  "extends": ["config:base"],
  "dependencyDashboard": false,
  "labels": ["renovate"],
  "automerge": true,
  "schedule": ["before 3am on Monday"],
  "packageRules": [
    {
      "groupName": "astro",
      "labels": ["astro"],
      "matchPackageNames": ["astro"],
      "matchPackagePatterns": ["^@astro", "^astro"]
    },
    {
      "groupName": "formatting & linting",
      "labels": ["linting"],
      "matchPackageNames": ["eslint", "prettier"],
      "matchPackagePatterns": ["^eslint"],
      "automerge": true
    }
  ]
}
